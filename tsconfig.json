{
  "compilerOptions": {
    "target": "ES2016",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "outDir": "build",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "commonjs",
    "isolatedModules": true,
    "rootDir": "."
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
